    <header class="navbar sticky-top bg-dark flex-md-nowrap p-0 shadow" data-bs-theme="dark">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6 text-white" href="{{ path('index') }}">
            <img style="max-width: 180px" src="{{ asset('img/mywebsitedown-logo.png') }}" />
        </a>
        <ul class="navbar-nav flex-row d-md-none">
            <li class="nav-item text-nowrap">
                <button class="nav-link px-3 text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <svg class="bi"><use xlink:href="#list"></use></svg>
                </button>
            </li>
        </ul>
    </header>

{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary">
                <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="sidebarMenuLabel">MyWebSiteDown.com</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2 active" aria-current="page" href="{{ path('app_dashboard_dashboard') }}">
                                    <svg class="bi"><use xlink:href="#house-fill"/></svg>
                                    Dashboard
                                </a>
                            </li>
                        </ul>

                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-body-secondary text-uppercase">
                            <span>Your websites</span>
                            <a class="link-secondary" href="{{ path('app_dashboard_add_link') }}" aria-label="Add a new website" title="Add a new website">
                                <svg class="bi"><use xlink:href="#plus-circle"/></svg>
                            </a>
                        </h6>
                        <ul class="nav flex-column mb-auto">
                            {% for schedule in app.user.webLinkSchedules %}
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2" href="{{ path('app_dashboard_view_link', { 'id' : schedule.id }) }}">
                                    {% if schedule.emailAlert %}
                                        <svg class="bi"><use xlink:href="#bell-fill"/></svg>
                                    {% else %}
                                        <svg class="bi"><use xlink:href="#bell-slash-fill"/></svg>
                                    {% endif %}

                                    {{ schedule.name|capitalize }}
                                    {% if schedule.active %}
                                        <span class="translate-middle p-1 bg-success border border-light rounded-circle"></span>
                                    {% else %}
                                        <span class="translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                    {% endif %}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>

                        {% if 'ROLE_ADMIN' in app.user.roles  %}
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-body-secondary text-uppercase">
                            <span>Admin</span>
                        </h6>
                        <ul class="nav flex-column mb-auto">
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center gap-2" href="{{ path('app_dashboard_admin_list_users') }}">
                                            <svg class="bi"><use xlink:href="#people"/></svg>
                                            List Users
                                    </a>
                                </li>

                        </ul>
                        {% endif %}

                        <hr class="my-3">

                        <ul class="nav flex-column mb-auto">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2" href="{{ path('app_dashboard_user_settings') }}">
                                    <svg class="bi"><use xlink:href="#gear-wide-connected"/></svg>
                                    Settings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2" href="{{ path('app_logout') }}">
                                    <svg class="bi"><use xlink:href="#door-closed"/></svg>
                                    Sign out
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{% block page_title %}{% endblock %}</h1>
                    <div class="btn-toolbar mb-2 mb-md-0 mt-2 mt-md-0">
                        {% block button %}{% endblock %}
                    </div>
                </div>

                {% for message in app.flashes('notice') %}
                    <div class="alert alert-{{ message['alert'] }}">
                        {{ message['message'] }}
                    </div>
                {% endfor %}

                <div class="col-12 col-md-9 align-items-center align-content-center mx-auto w-100 d-flex flex-column">
                    {% block dashboard_content %}{% endblock %}
                </div>
            </main>
        </div>
    </div>
{% endblock %}